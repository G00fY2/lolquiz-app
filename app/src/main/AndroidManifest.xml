<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.g00fy2.lolquiz">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.g00fy2.lolquiz.SplashActivity"
            android:screenOrientation="portrait"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name="com.g00fy2.lolquiz.MainActivity"
            android:theme="@style/AppTheme">
        </activity>
        <activity
            android:name="com.g00fy2.lolquiz.QuestionsActivity"
            android:label="@string/questions_toolbar_label"
            android:screenOrientation="portrait"/>
        <activity
            android:name="com.g00fy2.lolquiz.SettingsActivity"
            android:label="@string/settings_toolbar_label"
            android:parentActivityName="com.g00fy2.lolquiz.MainActivity">
        </activity>
    </application>

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

</manifest>